{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "noLib": false,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
